<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/dp_5"
    android:paddingVertical="@dimen/dp_1">

    <com.kenning.kcutil.widget.basicview.BackGroundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:bgradius="@dimen/dp_5"
        android:padding="@dimen/dp_1"
        android:orientation="horizontal"
        app:normalStrokeColor="#B3B3B3"
        app:normalStrokeWidth="@dimen/dp_1">

        <com.kenning.kcutil.widget.basicview.BackGroundLinearLayout
            android:id="@+id/ivSubtract"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_26"
            android:gravity="center"
            app:bottom_left_radius="@dimen/dp_5"
            app:normalBackgroundColor="@color/white"
            app:top_left_radius="@dimen/dp_5">

            <View
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_2"
                android:background="#B3B3B3" />
        </com.kenning.kcutil.widget.basicview.BackGroundLinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="#B3B3B3" />

            <com.kenning.kcutil.widget.WltEditText
                android:id="@+id/etMain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:hint=""
                android:inputType="numberDecimal"
                android:lines="1"
                android:minWidth="@dimen/dp_80"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text=""
                android:textColor="#1E2125"
                android:textSize="@dimen/sp_13" />

              <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="#B3B3B3" />
        </LinearLayout>

        <com.kenning.kcutil.widget.basicview.BackGroundLinearLayout
            android:id="@+id/ivAdd"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_26"
            android:gravity="center"
            android:orientation="vertical"
            app:bottom_right_radius="@dimen/dp_5"
            app:normalBackgroundColor="@color/white"
            app:top_right_radius="@dimen/dp_5">

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="@dimen/dp_5"
                android:background="#B3B3B3" />

            <View
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_2"
                android:background="#B3B3B3" />

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="@dimen/dp_5"
                android:background="#B3B3B3" />
        </com.kenning.kcutil.widget.basicview.BackGroundLinearLayout>
    </com.kenning.kcutil.widget.basicview.BackGroundLinearLayout>
</LinearLayout>