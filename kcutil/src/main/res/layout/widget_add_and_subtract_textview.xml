<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/dp_5"
    android:paddingVertical="@dimen/dp_1">

    <com.kenning.kcutil.widget.basicview.BackGroundLinearLayout
        android:id="@+id/ivSubtract"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_26"
        android:gravity="center"
        app:bottom_left_radius="@dimen/dp_5"
        app:normalStrokeColor="#B3B3B3"
        app:normalStrokeWidth="@dimen/dp_1"
        app:top_left_radius="@dimen/dp_5">

        <View
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_2"
            android:background="#B3B3B3" />
    </com.kenning.kcutil.widget.basicview.BackGroundLinearLayout>

    <com.kenning.kcutil.widget.basicview.BackGroundLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        app:normalStrokeColor="#B3B3B3"
        app:normalStrokeWidth="@dimen/dp_1">

        <com.kenning.kcutil.widget.WltTextView
            android:id="@+id/etMain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="数量"
            android:lines="1"
            android:minWidth="@dimen/dp_80"
            android:singleLine="true"
            android:text="0"
            android:textColor="#1E2125"
            android:textSize="@dimen/sp_13" />
    </com.kenning.kcutil.widget.basicview.BackGroundLinearLayout>

    <com.kenning.kcutil.widget.basicview.BackGroundLinearLayout
        android:id="@+id/ivAdd"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_26"
        android:gravity="center"
        android:orientation="vertical"
        app:bottom_right_radius="@dimen/dp_5"
        app:normalBackgroundColor="#FF1EACFB"
        app:normalStrokeColor="#B3B3B3"
        app:normalStrokeWidth="@dimen/dp_1"
        app:top_right_radius="@dimen/dp_5">

        <View
            android:layout_width="@dimen/dp_2"
            android:layout_height="@dimen/dp_5"
            android:background="@color/white" />

        <View
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_2"
            android:background="@color/white" />

        <View
            android:layout_width="@dimen/dp_2"
            android:layout_height="@dimen/dp_5"
            android:background="@color/white" />
    </com.kenning.kcutil.widget.basicview.BackGroundLinearLayout>
</LinearLayout>