    <declare-styleable name="RoundAngleImageView">
        <attr name="roundWidth" format="dimension" />
        <attr name="roundHeight" format="dimension" />
    </declare-styleable>

    <!--  自定义viewgroup 横向一次放入控件 位置不够后 换行填入  -->
    <declare-styleable name="AutoNewLineLayout">
        <attr name="horizontalSpace" format="dimension|reference" />

        <attr name="vertivalSpace" format="dimension|reference" />
    </declare-styleable>
    <!--   自定义控件 -->
    <declare-styleable name="StateCustomView">

        <!--text color-->
        <attr name="normalTextColor" format="color|reference" />
        <attr name="pressedTextColor" format="color|reference" />
        <attr name="unableTextColor" format="color|reference" />

        <!--stroke width and color, dash width, dash gap-->
        <attr name="strokeDashWidth" format="dimension|reference" />
        <attr name="strokeDashGap" format="dimension|reference" />
        <attr name="normalStrokeWidth" format="dimension|reference" />
        <attr name="pressedStrokeWidth" format="dimension|reference" />
        <attr name="unableStrokeWidth" format="dimension|reference" />
        <attr name="normalStrokeColor" format="color|reference" />
        <attr name="pressedStrokeColor" format="color|reference" />
        <attr name="unableStrokeColor" format="color|reference" />

        <!--background color-->
        <attr name="normalBackgroundColor" format="color|reference" />
        <attr name="normalBackgroundColor_end" format="color|reference" />
        <attr name="pressedBackgroundColor" format="color|reference" />
        <attr name="unableBackgroundColor" format="color|reference" />

        <!--background radius-->
        <attr name="bgradius" format="dimension|reference" />
        <attr name="top_right_radius" format="dimension|reference" />
        <attr name="bottom_right_radius" format="dimension|reference" />
        <attr name="bottom_left_radius" format="dimension|reference" />
        <attr name="top_left_radius" format="dimension|reference" />
        <attr name="rounds" format="boolean|reference" />

        <attr name="leftrounds" format="boolean|reference" />
        <attr name="rightrounds" format="boolean|reference" />

        <!--animation duration-->
        <attr name="animationDuration" format="integer|reference" />

        <attr name="gradientstate">
            <enum name="Top_Bottom" value="0" />
            <enum name="Left_Right" value="6" />
        </attr>
    </declare-styleable>

    <!--   自定义checkbox -->
    <declare-styleable name="SwitchImageView">
        <attr name="checkOffBackground" format="color|reference" />
        <attr name="checkOnBackground" format="color|reference" />
        <attr name="checkstate" format="boolean" />
        <attr name="autoSrcChange" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SwitchView">
        <attr name="kc_checkOffBackground" format="color|reference" />
        <attr name="kc_checkOnBackground" format="color|reference" />
        <attr name="kc_checkstate" format="boolean" />
        <attr name="kc_imageWidth" format="dimension|reference" />
        <attr name="kc_imageHeight" format="dimension|reference" />
        <attr name="kc_imagepadding" format="dimension|reference" />
        <attr name="kc_imagepaddingleft" format="dimension|reference" />
        <attr name="kc_imagepaddingright" format="dimension|reference" />
        <attr name="kc_imagepaddingtop" format="dimension|reference" />
        <attr name="kc_imagepaddingbottom" format="dimension|reference" />
        <attr name="kc_textsize" format="dimension|reference" />
        <attr name="kc_text" format="string" />
        <attr name="kc_textColor" format="color|reference" />
        <attr name="kc_textPaddingRight" format="dimension|reference" />
        <attr name="kc_autoSrcChange" format="boolean" />
        <!--暂不支持-->
        <attr name="kc_textViewLocation" format="boolean" />
    </declare-styleable>
</resources>
